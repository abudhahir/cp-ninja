{
  "name": "cp-ninja",
  "displayName": "Copilot Ninja Skills",
  "description": "Integrates Superpowers skills into GitHub Copilot for enhanced developer workflow.",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/abudhahir/cp-ninja.git"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cp-ninja.openSkillComposer",
        "title": "Open Skill Composer",
        "category": "Copilot Ninja"
      }
    ],
    "chatParticipants": [
      {
        "id": "cp-ninja",
        "name": "cp-ninja",
        "fullName": "Copilot Ninja",
        "iconPath": "./resources/cp-ninja-icon.svg",
        "description": "Copilot Ninja grants superpowers to your AI assistant."
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cp-ninja-sidebar",
          "title": "Copilot Ninja",
          "icon": "resources/cp-ninja-icon.svg"
        }
      ]
    },
    "views": {
      "cp-ninja-sidebar": [
        {
          "id": "cp-ninja.skillsView",
          "name": "Skills Explorer"
        }
      ]
    },
    "configuration": {
      "title": "Copilot Ninja",
      "properties": {
        "cpNinja.enableSuggestions": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable proactive skill suggestions."
        },
        "cpNinja.suggestionCooldown": {
          "type": "number",
          "default": 300,
          "description": "Cooldown period (in seconds) between proactive suggestions."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTests.js",
    "test:jest": "jest",
    "test:unit": "jest",
    "build:webview": "cd webview-src && npm install && npm run build",
    "watch:webview": "cd webview-src && npm run watch"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "jest": "^30.2.0",
    "mocha": "^10.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.0.4"
  }
}
